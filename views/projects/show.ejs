<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item active">Project name: &nbsp&nbsp&nbsp&nbsp   <%=project.name%></li>
                <li class="list-group-item">Project owner: &nbsp&nbsp&nbsp&nbsp  <%=project.owner%> </li>
                <% if(project.isActive){%>
                <li class="list-group-item">Donate: &nbsp&nbsp&nbsp&nbsp
                    <form class="form-inline" action="/projects/<%= project._id %>" method="POST">
                        <input class="form-control" type="number" name="donation" placeholder="Donate to project" value=0 min="1">
                        <button class="btn btn-sm btn-success">Apply Donation!</button>
                    </form>
                <li class="list-group-item">Time Left
                    <p id="demo"></p>
                </li>
                </li>
                <%}else{%>
                    <li class="list-group-item">It's to late to Donate project was over in <%=project.endTime.toISOString().split('T')[0]%></li>
                <%}%>
                <%if(project.donors.length > 0 ) {%> 
                    <li class="list-group-item">
                            <h2>Thanks To For Helping The Project</h2>
                            <% project.donors.forEach(function(donor){ %>
                                <div class="row">
                                    <div class="col-md-12">
                                        <strong><%= donor %> Helped The project</strong>
                                </div>
                            </div>
                        <% }) %>
                    </li>
                <% } %>

            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= project.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Raised $<%= project.moneyRaised %> From $<%= project.moneyToRaise %> Goal</h4>
                    <h4><a><%=project.name%></a></h4>
                    <p><%= project.description %></p>
                    <p>
                        <em>Submitted By <%= project.author.username %></em>
                    </p>
                    <% if(currentUser && project.author.id.equals(currentUser._id) && project.isActive){ %>
                        
                        <a class="btn btn-xs btn-warning" href="/projects/<%= project._id %>/edit">Edit</a>
                        <form id="delete-form" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="thumbnail">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="<%= project.video %>"></iframe>
                </div>
                <h5><a href="<%= project.link %>">For more information</a></h5>
                <% if(project.morePictures.length >0 ) { %>
                    <h4>Here are some more pictures</h4>
                    <div class="row">
                    <% project.morePictures.forEach(function(pic){ %>
                        <div class="col-md-4">
                            <div class="thumbnail">
                                <a href="pic" target="_blank">
                                    <img src="pic" alt="pic" style="width:100%">
                                    <div class="caption"></div>
                                </a>
                            </div>
                        </div>
                    <%})%>
                    </div>
                <%}%>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/projects/<%= project._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% project.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right"><%= comment.author.enterDate.toISOString().split('T')[0]; %></span>
                            <p>
                                <%= comment.text %> 
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/projects/<%=project._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/projects/<%=project._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<script>
    var project = <%- JSON.stringify(project) %>
</script>
<script src="/scripts/timerShow.js"></script>

<% include ../partials/footer %>