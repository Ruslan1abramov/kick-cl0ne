<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Project</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/projects" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter projects name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Poster image url">
                </div>
                <div class="form-group">
                    <label for="description">Project Description:</label>
                    <textarea class="form-control" rows="5" id="description" required></textarea>
                </div>
                <div class="form-group">
                         <span class="form-control">$
                            <input type="number" name="moneyToRaise" placeholder="Enter the amount of money needed to be raised" value=5000 required>
                        </span>
                </div>
                <div class="form-group">
                 <label for="date">End Date:</label>
                  <input type="date" name="endTime" required>
                </div>
                <div class="form-group">
                     <label for="files"> Select Project images:</label>
                     <input type="file" name="img" id="files" multiple>
                    <p><h6>Try selecting more than one file when browsing for files.</h6></p>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/projects">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>